<!DOCTYPE codename-engine-dialogue-box>
<dialoguebox y="40" scale="0">
	<text font="vcr.ttf" x="210" y="220" width="680" color="0xFF000000" size="29"/>

	<charpos name="left" x="-500" y="184"/>
	<charpos name="middle" x="0" y="184"/>
	<charpos name="right" x="500" y="184"/>

	<!--
		All animations for the dialogue box
		For example, if you wanna add an "angry" animation, add an animation named "angry" (box idle), and "angry-open" (not needed, for box apparition)
	-->
	<anim name="normal" anim="Normal_Loop" fps="24" loop="true" x="0"/>
	<anim name="angry" anim="Anger_Loop" fps="24" loop="true" x="0"/>
	<anim name="think" anim="Think_Loop" fps="24" loop="true" x="0"/>
	<anim name="weak" anim="Weak_Loop" fps="24" loop="true" x="0"/>
	<anim name="whisper" anim="Whisper_Loop" fps="24" loop="true" x="0"/>
</dialoguebox>